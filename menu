#include<iostream>
using namespace std;
int main()
{
    int choice;
    int items;
    int order;
    int confirm;
    cout<<"press 1 to order"<<endl;
    cout<<"press 2 to take order"<<endl;
    cin>>choice;
    if(choice!=1)
    {
        cout<<"please re enter your option"<<endl;
    }
    else
    {
        cout<<"the menu are as follows:\n 1.maggi-Rs 70. \n 2.egg rice-Rs 120.\n 3.pizza-Rs 169. \n 4.burger-Rs 60. \n 5.oreo milkshake-Rs 80."<<endl;
    }
    cout<<"how many items will you order"<<endl;
    cin>>items;
    cout<<"please enter your order number."<<endl;

    for(int i=0;i<items;i++)
    {
        cin>>order;

        if(order==1)
    {
        cout<<"1.maggi-Rs 70"<<endl;
    }
    if(order==2)
    {
        cout<<"2.egg rice-Rs 120."<<endl;
    }
    if(order==3)
    {
        cout<<"3.pizza-Rs 169."<<endl;
    }
    if(order==4)
    {
        cout<<"4.burger-Rs 60."<<endl;
    }
    if(order==5)
    {
        cout<<"5.oreo milkshake-Rs 80."<<endl;
    }
    if(order>5)
    {
        cout<<"enter the correct order number"<<endl;
    }
    }
    cout<<"would you like to comfirm your order"<<endl;
    cin>>confirm;
    if(confirm ==1)
    {
        cout<<"thank you for your order .please visit our cafe again!!!"<<endl;
    }
       else
    {
        cout<<"sorry your order has been cancelled.thank you .."<<endl;
    }




}
